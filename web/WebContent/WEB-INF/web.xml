<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Car Pool Project</display-name>
  <filter>
    <filter-name>OpenIdFilter</filter-name>
    <filter-class>org.verisign.joid.consumer.OpenIdFilter</filter-class>
    <init-param>
      <param-name>saveInCookie</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>ignorePaths</param-name>
      <param-value>/login,/server,/echo</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>UserUrlFilter</filter-name>
    <filter-class>examples.server.UserUrlFilter</filter-class>
    <init-param>
      <param-name>idJsp</param-name>
      <param-value>/me.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>OpenIdFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UserUrlFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>OpenIdConsumer</display-name>
    <servlet-name>OpenIdConsumer</servlet-name>
    <servlet-class>car.pool.user.authentication.servlet.OpenIdConsumer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OpenIdConsumer</servlet-name>
    <url-pattern>/openidlogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Processes a log in via username and password</description>
    <display-name>NonOpenIdConsumer</display-name>
    <servlet-name>NonOpenIdConsumer</servlet-name>
    <servlet-class>car.pool.user.authentication.servlet.NonOpenIdConsumer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NonOpenIdConsumer</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Process form data and then registers the user in the database with this data</description>
    <display-name>RegistrationProcessing</display-name>
    <servlet-name>RegistrationProcessing</servlet-name>
    <servlet-class>car.pool.user.registration.servlet.RegistrationProcessing</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationProcessing</servlet-name>
    <url-pattern>/adduser</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>OpenIdRegistrationProcessor</display-name>
    <servlet-name>OpenIdRegistrationProcessor</servlet-name>
    <servlet-class>car.pool.user.registration.servlet.OpenIdRegistrationProcessor</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OpenIdRegistrationProcessor</servlet-name>
    <url-pattern>/oadduser</url-pattern>
  </servlet-mapping>
  <servlet>
  	<display-name>UpdateUserDetails</display-name>
  	<servlet-name>UpdateUserDetails</servlet-name>
  	<servlet-class>car.pool.user.update.servlet.UpdateUserDetails</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UpdateUserDetails</servlet-name>
  	<url-pattern>/updateuser</url-pattern>
  </servlet-mapping>
  <servlet>
  	<display-name>AddOpenId</display-name>
  	<servlet-name>AddOpenId</servlet-name>
  	<servlet-class>car.pool.user.update.servlet.AddOpenId</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddOpenId</servlet-name>
  	<url-pattern>/addopenid</url-pattern>
  </servlet-mapping>
  <servlet>
  	<display-name>RemoveOpenId</display-name>
  	<servlet-name>RemoveOpenId</servlet-name>
  	<servlet-class>car.pool.user.update.servlet.RemoveOpenId</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RemoveOpenId</servlet-name>
  	<url-pattern>/removeopenid</url-pattern>
  </servlet-mapping>
</web-app>